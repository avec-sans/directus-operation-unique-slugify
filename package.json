{
	"name": "directus-operation-unique-slugify",
	"description": "Ensure uniqueness of slugs in Directus with workflows",
	"icon": "extension",
	"version": "1.0",
	"keywords": [
		"directus",
		"directus-extension",
		"directus-extension-operation"
	],
	"type": "module",
	"files": [
		"dist"
	],
	"directus:extension": {
		"type": "operation",
		"path": {
			"app": "dist/app.js",
			"api": "dist/api.js"
		},
		"source": {
			"app": "src/app.ts",
			"api": "src/api.ts"
		},
		"host": "^10.10.0"
	},
	"scripts": {
		"build": "directus-extension build",
		"dev": "directus-extension build -w --no-minify",
		"link": "directus-extension link"
	},
	"devDependencies": {
		"@directus/extensions-sdk": "11.0.7",
		"@types/node": "^20.14.2",
		"typescript": "^5.4.5",
		"vue": "^3.4.27"
	},
	"dependencies": {
		"slugify": "^1.6.6"
	}
}
